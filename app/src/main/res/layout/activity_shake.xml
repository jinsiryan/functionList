<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_main"
   >
    <ImageView
        android:id="@+id/img_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/shake_handle"
        android:layout_marginTop="@dimen/activity_shake_img_margin_top"/>
    <ImageView
        android:id="@+id/imag_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/a_bg"
        android:layout_centerInParent="true"
        android:layout_below="@+id/img_handle"/>
    <TextView
        android:id="@+id/txt_show_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shake_txt_show_count"
        android:layout_marginBottom="@dimen/shake_txt_margin_bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
